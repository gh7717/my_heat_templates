heat_template_version: 2013-05-23
description: Heat Mongodb template to support F17 with SSH key requirements
parameters:
  Key:
    type: String
    description: SSH key to connect to the servers
    default: mykey
  InstanceType:
    Description: EC2 instance type
    Type: String
    Default: m1.small
    AllowedValues: [m1.tiny, m1.small, m1.medium, m1.large, m1.xlarge]
    ConstraintDescription: must be a valid EC2 instance type.
  Subnet:
    Description: Name of an existing EC2 network to enable SSH access to the instances
    Type: String
    Default: 724a09da-fd68-4bdd-80de-d6f8eafab902
  VolumeSize:
    Type: Number
    Description: Size of the volume to be created.
    Default: 10
    Constraints:
      - range: { min: 1, max: 1024 }
        description: must be between 1 and 1024 Gb.
  AvailabilityZone:
    Type: String
    Description: The Availability Zone to launch the instance.
    Default: nova
  ImageId:
    Type: String
    Description: Image name 
    Default: fedora-17-heat

resources:
  MongoDBSecurityGroup:
    type: AWS::EC2::SecurityGroup
    properties:
      GroupDescription: 'Enable access via port 27017 plus SSH access'
      SecurityGroupIngress:
      - IpProtocol: 'tcp'
        FromPort: '27017'
        ToPort: '27017'
        CidrIp: '0.0.0.0/0'
      - IpProtocol: 'tcp'
        FromPort: '22'
        ToPort : '22'
        CidrIp : '0.0.0.0/0'
        
  MongoDatabasePrimary:
    Type: AWS::EC2::Instance
    Metadata:
      AWS::CloudFormation::Init:
        config:
          packages:
            yum:
              mongodb-org: []
          services:
            systemd:
              mongodb: {enabled: 'true', ensureRunning: 'true'}
              
    Properties:
      ImageId: {Ref: ImageId}
      SubnetId: {Ref: Subnet}
      InstanceType: {Ref: InstanceType}
      KeyName: {Ref: Key}
      SecurityGroups: [{"Ref" : "MongoDBSecurityGroup"}]
      UserData:
        Fn::Base64:
          Fn::Join: 
          - ''
          - - '#!/bin/bash -v
              '
            - 'cat <<EOF > /etc/yum.repos.d/mongodb.repo
              '
            - '[mongodb]
              '
            - 'name=MongoDB Repository
              '
            - 'baseurl=http://downloads-distro.mongodb.org/repo/redhat/os/x86_64/
              '
            - 'gpgcheck=0
              '
            - 'enabled=1
              '
            - 'EOF
              '
            - 'yum -y install mongodb-org
              '
            - '/etc/init.d/mongod start
              '
            - 'chkconfig mongod on
              '
              
  CinderVolume:
    Type: AWS::EC2::Volume
    Properties:
      AvailabilityZone: {Ref: AvailabilityZone}
      Size: { Ref: VolumeSize} 
  
  VolumeAttachment:
    Type: AWS::EC2::VolumeAttachment
    Properties:
      VolumeId: {Ref: CinderVolume}
      InstanceId: {Ref: MongoDatabasePrimary}
      Device: /dev/vdc
      
outputs:
  WebsiteURL:
    Value:
      Fn::Join:
      - ''
      - - http://
        - Fn::GetAtt: [MongoDatabasePrimary, PublicIp]
    Description: PublicIp MongoDB server
